      <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

      .container
        .row
          h1 xhatter

        .row
           .chatBox
             form(action="#")
               label(for="username") Name
               input(type="text" name="username" placeholder="Adam" required)
               label(for="chatBox") Chat
               input(type="textarea" name="chatBox" placeholder="Say What?" required)
               input(type="submit" value="Send")

        .row
          .output

